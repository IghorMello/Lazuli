{
    "manifest_version": 2,
    "name": "Extension of support for the well-being of the IT professional",
    "version": "1.0.1",
    "description": "Extended support for the well-being of IT professionals, monitoring and helping to improve their productivity.",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "tabs",
        "activeTab",
        "storage",
        "idle",
        "chrome://favicon/*",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "images/48x48.png",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "images/16x16.png",
        "32": "images/32x32.png",
        "48": "images/48x48.png",
        "128": "images/128x128.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "js/block.js",
            "js/time-tracker/common.js",
            "js/time-tracker/storage.js",
            "js/time-tracker/activity.js",
            "js/time-tracker/tab.js",
            "js/time-tracker/timeInterval.js",
            "js/time-tracker/background.js",
            "js/time-tracker/restriction.js",
            "js/time-tracker/url.js"
        ]
    },
    "offline_enabled": true,
    "web_accessible_resources": [
        "icon.png"
    ]
}