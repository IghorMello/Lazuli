{
  "manifest_version": 2,
  "name": "Extension of mental health support",
  "short_name": "Extension of mental health support",
  "version": "1.0.2",
  "minimum_chrome_version": "26",
  "description": "Extension of mental health support.",
  "options_page": "views/settings.html",
  "icons": {
    "16": "assets/img/16x16.png",
    "32": "assets/img/32x32.png",
    "48": "assets/img/48x48.png",
    "128": "assets/img/128x128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle",
    "chrome://favicon/*",
    "webNavigation",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "https://www.youtube.com/*",
    "https://www.netflix.com/*",
    "notifications"
  ],
  "offline_enabled": true,
  "background": {
    "scripts": [
      "js/src/lib/jquery-3.3.1.min.js",
      "js/src/app/common.js",
      "js/src/app/storage.js",
      "js/src/app/activity.js",
      "js/src/app/tab.js",
      "js/src/app/timeInterval.js",
      "js/src/app/background.js",
      "js/src/app/restriction.js",
      "js/src/app/url.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "views/index.html",
    "default_title": "Extension of mental health support",
    "default_icon": "assets/img/48x48.png"
  }
}
